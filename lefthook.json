{
	"$schema": "./node_modules/lefthook/schema.json",
	"pre-commit": {
		"parallel": true,
		"commands": {
			"eslint": {
				"glob": "*.{js,mjs,ts,tsx,astro}",
				"run": "bun eslint {staged_files} --fix",
				"stage_fixed": true
			},
			"prettier": {
				"glob": "*.{js,mjs,ts,tsx,css,scss,md,astro,json,html}",
				"run": "bun prettier --write --ignore-unknown {staged_files}",
				"stage_fixed": true
			}
		}
	}
}
