{
	"$schema": "./node_modules/lefthook/schema.json",
	"pre-commit": {
		"parallel": true,
		"commands": {
			"biome": {
				"glob": "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,css,astro}",
				"run": "bun biome check --write --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}",
				"stage_fixed": true
			},
			"prettier": {
				"glob": "*.{astro}",
				"run": "bun prettier --write --ignore-unknown {staged_files}",
				"stage_fixed": true
			}
		}
	}
}
