---
// Component Imports
import MainLayout from '@/layouts/MainLayout.astro'

interface Props {
	chips: {
		name: string
		slug?: string
		subChip?: string
	}[]
	title?: string
	subTitle?: string
	bannerImage?: string
	slug?: string
}

const { chips, title, subTitle, bannerImage, slug } = Astro.props
---

<MainLayout title={title} subTitle={subTitle} bannerImage={bannerImage} slug={slug}>
	<div class="flex flex-col rounded-2xl bg-card p-6">
		<div class="grid grid-cols-1 gap-1 md:grid-cols-2 lg:grid-cols-3">
			{
				chips.map((chip) => (
					<a
						href={chip.slug}
						class="chip flex flex-row items-center justify-between rounded-lg px-4 py-2 transition-all select-none hover:bg-primary-lighten"
					>
						<p class="chip-name truncate pl-0 text-lg text-foreground transition-all">{chip.name}</p>
						{chip.subChip && (
							<span class="ml-2 rounded-md bg-primary-lighten px-3 py-1 text-primary">{chip.subChip}</span>
						)}
					</a>
				))
			}
		</div>
	</div>
</MainLayout>

<style>
	@reference '../styles/globals.css';

	.chip:hover .chip-name {
		@apply pl-2 text-primary;
	}
</style>
