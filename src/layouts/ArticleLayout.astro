---
import Markdown from '@/components/common/Markdown.astro'
import MainLayout from '@/layouts/MainLayout.astro'

interface Props {
	title?: string
	description?: string
	image?: string
}

const { title, description, image } = Astro.props
---

<MainLayout title={title} subTitle={description} bannerImage={image}>
	<div class='article-wrapper'>
		<div class='article'>
			<Markdown>
				<slot />
			</Markdown>
		</div>
	</div>
</MainLayout>

<style>
	@reference '../styles/globals.css';

	.article-wrapper {
		@apply bg-card mx-3 rounded-2xl px-5 py-6 lg:mx-0 lg:px-10 lg:py-9;
	}
	.article {
		@apply font-primary flex flex-col;
	}
</style>
