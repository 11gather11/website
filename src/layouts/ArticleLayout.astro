---
import Markdown from '@/components/common/Markdown.astro'
import PageLayout from '@/layouts/PageLayout.astro'

interface Props {
	title?: string
	description?: string
	image?: string
}

const { title, description, image } = Astro.props
---

<PageLayout title={title} subTitle={description} bannerImage={image}>
	<div class='article-wrapper'>
		<div class='article'>
			<Markdown>
				<slot />
			</Markdown>
		</div>
	</div>
</PageLayout>

<style>
	@reference '../styles/globals.css';

	.article-wrapper {
		@apply mx-3 rounded-2xl bg-card px-5 py-6 lg:mx-0 lg:px-10 lg:py-9;
	}
	.article {
		@apply flex flex-col font-primary;
	}
</style>
