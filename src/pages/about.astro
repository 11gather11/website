---
import { getEntry, render } from 'astro:content'

import Markdown from '@/components/common/Markdown.astro'
import PageLayout from '@/layouts/PageLayout.astro'

const aboutArticle = await getEntry('specs', 'about')
if (!aboutArticle) {
	// Handle Error, for example:
	throw new Error('Could not find about article')
}
const { Content } = await render(aboutArticle)
---

<PageLayout>
	<div class='article-wrapper'>
		<div class='article'>
			<Markdown>
				<Content />
			</Markdown>
		</div>
	</div>
</PageLayout>

<style>
	@reference "../styles/globals.css";

	.article-wrapper {
		@apply w-full rounded-2xl bg-card p-10;
	}
	.article {
		@apply flex flex-col;
	}
</style>
