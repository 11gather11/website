---
import ChipLayout from '@/layouts/ChipLayout.astro'
import { getCategories } from '@/utils/articles'

const categories = [...(await getCategories()).values()].sort((a, b) => b.articles.length - a.articles.length)
const chips = categories.map((category) => ({
	name: category.name,
	slug: category.slug,
	subChip: category.articles.length.toString(),
}))
---

<ChipLayout chips={chips} title="カテゴリー" />
