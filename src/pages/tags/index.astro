---
import ChipLayout from '@/layouts/ChipLayout.astro'
import { getTags } from '@/utils/articles'

const tags = [...(await getTags()).values()].sort(
	(a, b) => b.articles.length - a.articles.length
)
const chips = tags.map((tag) => ({
	name: tag.name,
	slug: tag.slug,
	subChip: tag.articles.length.toString(),
}))
---

<ChipLayout chips={chips} title='タグ' />
