---
interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<div
	class=`prose prose-sm lg:prose-base dark:prose-invert shrink max-w-full ${className ?? ''}`
>
	<slot />
</div>

<script>
	/**
	 * コードブロックにコピーボタンを追加する関数
	 */
	const addPreCopyButton = (): void => {
		observer.disconnect()

		const codeBlocks = Array.from(document.querySelectorAll('pre'))

		for (const codeBlock of codeBlocks) {
			// 既にラッパーで囲まれている場合はスキップ
			if (
				codeBlock.parentElement?.nodeName === 'DIV' &&
				codeBlock.parentElement?.classList.contains('code-block')
			) {
				continue
			}

			// ラッパー要素の作成
			const wrapper = document.createElement('div')
			wrapper.className = 'relative code-block'

			// コピーボタンの作成
			const copyButton = document.createElement('button')
			copyButton.className =
				'copy-btn btn-regular-dark absolute active:scale-90 h-8 w-8 top-2 right-2 opacity-75 text-sm p-1.5 rounded-lg transition-all ease-in-out'
			copyButton.setAttribute('aria-label', 'コードをコピー')

			// コードブロックをフォーカス可能にする
			codeBlock.setAttribute('tabindex', '0')

			// DOM要素の再構成
			if (codeBlock.parentNode) {
				codeBlock.parentNode.insertBefore(wrapper, codeBlock)
			}

			// アイコンSVGの定義
			const copyIcon = `<svg class="copy-btn-icon copy-icon" xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 -960 960 960" width="20px"><path d="M368.37-237.37q-34.48 0-58.74-24.26-24.26-24.26-24.26-58.74v-474.26q0-34.48 24.26-58.74 24.26-24.26 58.74-24.26h378.26q34.48 0 58.74 24.26 24.26 24.26 24.26 58.74v474.26q0 34.48-24.26 58.74-24.26 24.26-58.74 24.26H368.37Zm0-83h378.26v-474.26H368.37v474.26Zm-155 238q-34.48 0-58.74-24.26-24.26-24.26-24.26-58.74v-515.76q0-17.45 11.96-29.48 11.97-12.02 29.33-12.02t29.54 12.02q12.17 12.03 12.17 29.48v515.76h419.76q17.45 0 29.48 11.96 12.02 11.97 12.02 29.33t-12.02 29.54q-12.03 12.17-29.48 12.17H213.37Zm155-238v-474.26 474.26Z"/></svg>`
			const successIcon = `<svg class="copy-btn-icon success-icon" xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 -960 960 960" width="20px"><path d="m389-377.13 294.7-294.7q12.58-12.67 29.52-12.67 16.93 0 29.61 12.67 12.67 12.68 12.67 29.53 0 16.86-12.28 29.14L419.07-288.41q-12.59 12.67-29.52 12.67-16.94 0-29.62-12.67L217.41-430.93q-12.67-12.68-12.79-29.45-.12-16.77 12.55-29.45 12.68-12.67 29.62-12.67 16.93 0 29.28 12.67L389-377.13Z"/></svg>`

			copyButton.innerHTML = `<div>${copyIcon} ${successIcon}</div>`

			// DOM要素を追加
			wrapper.appendChild(codeBlock)
			wrapper.appendChild(copyButton)

			// コピー機能の実装
			let timeout: ReturnType<typeof setTimeout>

			const handleCopyClick = async (): Promise<void> => {
				try {
					// 既存のタイムアウトをクリア
					if (timeout) {
						clearTimeout(timeout)
					}

					// コードテキストを取得
					const codeElement = codeBlock.querySelector('code')
					const text = codeElement?.innerText

					if (!text) {
						console.warn('コピーするテキストが見つかりません')
						return
					}

					// Clipboard APIでコピー
					if (navigator.clipboard && navigator.clipboard.writeText) {
						await navigator.clipboard.writeText(text)

						// 成功状態を表示
						copyButton.classList.add('success')
						copyButton.setAttribute('aria-label', 'コピー完了!')

						// 1秒後に元の状態に戻す
						timeout = setTimeout(() => {
							copyButton.classList.remove('success')
							copyButton.setAttribute('aria-label', 'コードをコピー')
						}, 1000)
					} else {
						// Clipboard APIが利用できない場合はユーザーに通知
						copyButton.classList.add('error')
						copyButton.setAttribute('aria-label', 'コピー機能は利用できません')

						// テキストを選択状態にして手動コピーを促す
						if (codeElement) {
							const range = document.createRange()
							range.selectNodeContents(codeElement)
							const selection = window.getSelection()
							selection?.removeAllRanges()
							selection?.addRange(range)
						}

						timeout = setTimeout(() => {
							copyButton.classList.remove('error')
							copyButton.setAttribute('aria-label', 'コードをコピー')
						}, 2000)
					}
				} catch (error) {
					console.error('クリップボードへのコピーに失敗しました:', error)

					// エラー状態を表示
					copyButton.classList.add('error')
					copyButton.setAttribute('aria-label', 'コピーに失敗しました')

					// テキストを選択状態にして手動コピーを促す
					const codeElement = codeBlock.querySelector('code')
					if (codeElement) {
						const range = document.createRange()
						range.selectNodeContents(codeElement)
						const selection = window.getSelection()
						selection?.removeAllRanges()
						selection?.addRange(range)
					}

					timeout = setTimeout(() => {
						copyButton.classList.remove('error')
						copyButton.setAttribute('aria-label', 'コードをコピー')
					}, 2000)
				}
			}

			copyButton.addEventListener('click', handleCopyClick)
		}

		// オブザーバーを再開
		observer.observe(document.body, { childList: true, subtree: true })
	}

	// MutationObserverの設定
	const observer = new MutationObserver(addPreCopyButton)
	observer.observe(document.body, { childList: true, subtree: true })

	// DOMContentLoadedイベントで初期化
	document.addEventListener('DOMContentLoaded', addPreCopyButton)
</script>

<style is:inline>
	.btn-regular-dark {
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: oklch(0.45 0.01 var(--hue));
	}

	.btn-regular-dark:hover {
		background-color: oklch(0.5 0.01 var(--hue));
	}

	.btn-regular-dark:active {
		background-color: oklch(0.55 0.01 var(--hue));
	}

	.btn-regular-dark.dark {
		background-color: oklch(0.3 0.02 var(--hue));
	}

	.btn-regular-dark.dark:hover {
		background-color: oklch(0.35 0.03 var(--hue));
	}

	.btn-regular-dark.dark:active {
		background-color: oklch(0.4 0.03 var(--hue));
	}

	.btn-regular-dark.success {
		background-color: oklch(0.75 0.14 var(--hue));
	}

	.btn-regular-dark.success.dark {
		background-color: oklch(0.75 0.14 var(--hue));
	}

	.btn-regular-dark.error {
		background-color: oklch(0.6 0.2 0);
	}

	.copy-btn-icon {
		position: absolute;
		top: 50%;
		left: 50%;
		transition: all 0.3s;
		transform: translate(-50%, -50%);
	}

	.copy-btn .copy-icon {
		opacity: 1;
		fill: white;
	}

	.copy-btn .copy-icon.dark {
		fill: rgba(255, 255, 255, 0.75);
	}

	.copy-btn.success .copy-icon {
		opacity: 0;
	}

	.copy-btn .success-icon {
		fill: white;
		opacity: 0;
	}

	.copy-btn.success .success-icon {
		opacity: 1;
	}
</style>
