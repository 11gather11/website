---
interface Props {
	year: number
	count: number
}

const { year, count } = Astro.props
---

<div class='mb-2 flex w-full flex-row items-center'>
	<!-- 年表示部分 -->
	<div class={`
   flex w-[15%] flex-row justify-end
   md:w-[10%]
 `}>
		<p class='year text-foreground text-2xl font-bold select-none'>
			{year}
		</p>
	</div>

	<!-- タイムライン ドット部分 -->
	<div class={`
   dash-line relative flex h-full w-[15%] items-center
   md:w-[10%]
 `}>
		<div
			class={`
     bg-card outline-primary z-50 mx-auto h-3 w-3 rounded-full bg-none outline-3
     -outline-offset-[2px]
   `}
		>
		</div>
	</div>

	<!-- 記事数表示部分 -->
	<div>
		<p class='count text-foreground-lighten select-none'>
			{count}件の記事
		</p>
	</div>
</div>

<style>
	@reference '../../styles/globals.css';

	.year {
		@apply font-primary;
	}

	.count {
		@apply font-primary;
	}
</style>
