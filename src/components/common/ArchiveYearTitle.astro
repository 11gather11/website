---
interface Props {
	year: number
	count: number
}

const { year, count } = Astro.props
---

<div class='mb-2 flex w-full flex-row items-center'>
	<!-- 年表示部分 -->
	<div
		class={`
			flex w-[15%] flex-row justify-end
			md:w-[10%]
		`}
	>
		<p class='font-sans text-2xl font-bold text-foreground select-none'>
			{year}
		</p>
	</div>

	<!-- タイムライン ドット部分 -->
	<div
		class={`
			relative flex h-full w-[15%] items-center
			md:w-[10%]
		`}
	>
		<div class={`absolute top-1/2 left-[calc(50%-1px)] h-6 border-l-2 border-dashed border-l-foreground opacity-25`}>
		</div>
		<div class={`z-50 mx-auto h-3 w-3 rounded-full bg-card bg-none outline-3 -outline-offset-2 outline-primary`}></div>
	</div>

	<!-- 記事数表示部分 -->
	<div>
		<p class='font-sans text-muted-foreground select-none'>
			{count}件の記事
		</p>
	</div>
</div>
